<% provide(:title, 'パスワードを忘れた場合') %>
<main>
  <div class="container col-xxl-10 px-4 py-3">
    <h2 class="mb-3 text-center">パスワードを忘れた場合</h2>
    <div class="col-lg-6 mx-auto">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field form-floating mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "new-password-email", class: "form-control", placeholder: "email" %>
          <%= f.label :email, "登録済みのメールアドレス", for: "new-password-email" %>
        </div>
        <div class="actions">
          <%= f.submit "パスワードリセット方法を送信する", class: "btn btn-primary btn--extend mb-3 new-password-btn" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
