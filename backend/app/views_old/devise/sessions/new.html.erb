<% provide(:title, 'ログイン') %>
<% breadcrumb :new_user_session %>
<main>
  <div class="container col-xxl-10 px-4 py-3">
    <h2 class="mb-3 text-center">WalkBreakにログイン</h2>
    <div class="col-lg-6 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-floating mb-3">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", id: "new-session-name", class: "form-control", placeholder: "name", required: "true" %>
          <%= f.label :name, for: "new-session-name" %>
        </div>
        <div class="field form-floating mb-3">
          <%= f.password_field :password, autocomplete: "current-password", id: "new-session-password", class: "form-control", placeholder: "password", required: "true" %>
          <%= f.label :password, for: "new-session-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "ログイン" ,class: "btn btn-primary btn--extend mb-3 login-btn" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
